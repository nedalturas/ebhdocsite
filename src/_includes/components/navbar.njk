<head>

    <style>
        .nav-container {
            width: 100%;
            background-color: var(--pico-background-color);
            border-bottom: 1px solid lightgrey;
            top: 0;
            position: sticky;
            z-index: 100;
            height: 80px;
            display: flex;
            align-items: center;
        }
    </style>
</head>

<div class="nav-container">

    <nav class="container">
        <ul>
            <li>
                <strong>
                    <a href="/" class="nav-logo">{{ site.name or "My Site" }}</a>
                </strong>
            </li>
        </ul>

        <ul class="">

            {% for item in navigation.items %}
            <li class="">
                <a href="{{ item.url }}" class="{% if page.url == '/' %}active{% endif %}">{{ item.text }}</a>
            </li>
            {% endfor %}

            <li class="">
                <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
                    <span class="theme-icon">ðŸŒ™</span>
                </button>
            </li>
        </ul>

    </nav>
</div>